@page
@model ASP_NET_Simulation.Pages.EditStudentModel
@{
    ViewData["Title"] = "Edit Student";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Student.Id" />
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Student.Name" asp-for="Student.Name" required />
    </div>
    <div class="form-group">
        <label for="Balance">Balance:</label>
        <input type="number" id="Balance" name="Student.Balance" step="0.01" asp-for="Student.Balance" required />
    </div>
    <div class="form-group">
        <label for="FinancialAid">Financial Aid:</label>
        <input type="number" id="FinancialAid" name="Student.FinancialAid" step="0.01" asp-for="Student.FinancialAid" required />
    </div>
    <div class="form-group">
        <label for="Tuition">Tuition:</label>
        <input type="number" id="Tuition" name="Student.Tuition" step="0.01" asp-for="Student.Tuition" required />
    </div>
    <div class="form-group">
        <label for="Fees">Fees:</label>
        <input type="number" id="Fees" name="Student.Fees" step="0.01" asp-for="Student.Fees" required />
    </div>
    <div class="form-group">
        <label for="Scholarships">Scholarships:</label>
        <input type="number" id="Scholarships" name="Student.Scholarships" step="0.01" asp-for="Student.Scholarships" required />
    </div>
    <button type="submit">Update Student Info</button>
</form>




