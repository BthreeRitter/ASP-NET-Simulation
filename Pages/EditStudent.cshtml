@page
@model ASP_NET_Simulation.Pages.EditStudentModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Form for editing student information -->
    <form method="post">
        <!-- Hidden input for storing the student's ID -->
        <input type="hidden" asp-for="Student.Id" />

        <!-- Form group for student's name -->
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Student.Name" asp-for="Student.Name" required class="form-control" />
        </div>
          
        <!-- Form group for student's balance -->
        <div class="form-group">
            <label for="Balance">Balance:</label>
            <input type="number" id="Balance" name="Student.Balance" step="0.01" asp-for="Student.Balance" required class="form-control" />
        </div>

        <!-- Form group for student's financial aid -->
        <div class="form-group">
            <label for="FinancialAid">Financial Aid:</label>
            <input type="number" id="FinancialAid" name="Student.FinancialAid" step="0.01" asp-for="Student.FinancialAid" required class="form-control" />
        </div>

        <!-- Form group for student's tuition -->
        <div class="form-group">
            <label for="Tuition">Tuition:</label>
            <input type="number" id="Tuition" name="Student.Tuition" step="0.01" asp-for="Student.Tuition" required class="form-control" />
        </div>

        <!-- Form group for student's fees -->
        <div class="form-group">
            <label for="Fees">Fees:</label>
            <input type="number" id="Fees" name="Student.Fees" step="0.01" asp-for="Student.Fees" required class="form-control" />
        </div>

        <!-- Form group for student's scholarships -->
        <div class="form-group">
            <label for="Scholarships">Scholarships:</label>
            <input type="number" id="Scholarships" name="Student.Scholarships" step="0.01" asp-for="Student.Scholarships" required class="form-control" />
        </div>

        <!-- Submit button for updating student info -->
        <button type="submit" class="btn btn-cmu-red" style="margin-top: 15px;">Update Student Info</button>
    </form>
</div>



